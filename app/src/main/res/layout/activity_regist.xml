<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MySignUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/mainBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--header Description App-->
        <LinearLayout
            android:id="@+id/toUp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/lampung_coa" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:text="KPB Apps"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/toUp1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorPrimary"/>

        <!--area Form SignUp-->
        <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true">

                <moe.feng.common.stepperview.VerticalStepperItemView
                    android:id="@+id/stepper_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:step_index="1"
                    app:step_activated_color="@color/bg_screen3"
                    app:step_title="Data Petani"
                    app:step_summary="Cek kembali jika diragukan"
                    app:step_summary_done="Cek kembali jika diragukan"
                    app:step_state="selected">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/ic_code_black_24dp" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:passwordToggleEnabled="true">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/edNik"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTintMode="@color/colorAccent"
                                    android:hint="Nik"
                                    android:textSize="12dp"
                                    android:inputType="number"/>

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>
                        <Button
                            android:id="@+id/btnCari"
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            android:text="Periksa ..."
                            android:textAllCaps="false"
                            android:layout_gravity="right"
                            android:drawableLeft="@drawable/ic_search_black_24dp"
                            android:textColor="#fff"
                            android:background="@color/bg_screen3"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/ic_person_pin_black_24dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Nama      : "/>
                            <TextView
                                android:id="@+id/txtNama"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Suparmin"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/ic_group_black_24dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Poktan    : "/>
                            <TextView
                                android:id="@+id/txtPoktan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Sido Panen"/>

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/button_next_0"
                                android:layout_width="100dp"
                                android:layout_height="35dp"
                                android:textAllCaps="false"
                                android:drawableRight="@drawable/ic_exit_to_app_black_24dp"
                                android:background="@color/bg_screen3"
                                android:textColor="@android:color/white"
                                android:text="Lanjut"/>

                        </LinearLayout>

                    </LinearLayout>

                </moe.feng.common.stepperview.VerticalStepperItemView>

                <moe.feng.common.stepperview.VerticalStepperItemView
                    android:id="@+id/stepper_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:step_index="2"
                    app:step_activated_color="@color/bg_screen3"
                    app:step_title="Data Anak">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/ic_person_pin_black_24dp" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:passwordToggleEnabled="true">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/edNamaAnak"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTintMode="@color/colorAccent"
                                    android:hint="Nama Anak"
                                    android:textSize="12dp"
                                    android:inputType="textAutoComplete"/>

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/ic_date_range_black_24dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:id="@+id/tglan">
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:passwordToggleEnabled="true">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/edTgl"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTintMode="@color/colorAccent"
                                    android:hint="Tanggal Lahir Anak"
                                    android:textSize="12dp"
                                    android:text="--Pilih Tanggal--"
                                    android:enabled="false"
                                    android:inputType="date"/>

                            </android.support.design.widget.TextInputLayout>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/ic_phone_black_24dp" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:passwordToggleEnabled="true">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/edTlp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTintMode="@color/colorAccent"
                                    android:hint="No Telpon"
                                    android:textSize="12dp"
                                    android:inputType="number"/>

                            </android.support.design.widget.TextInputLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/ic_lock_black_24dp" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:passwordToggleEnabled="true">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/edPass"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTintMode="@color/colorAccent"
                                    android:hint="Password"
                                    android:textSize="12dp"
                                    android:inputType="textPassword"/>

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:text="Registrasi"
                                android:textColor="#fff"
                                android:textAllCaps="false"
                                android:background="@color/bg_screen3"
                                android:id="@+id/btnRegis"/>

                            <Button
                                android:id="@+id/button_prev_1"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginStart="8dp"
                                android:text="Kembali"
                                android:textColor="#FFF"
                                android:background="@color/bg_screen3"
                                android:textAllCaps="false" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/button_next_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/material_blue_500"
                                android:textColor="@android:color/white"
                                android:text="@android:string/ok"/>


                            <Button
                                android:id="@+id/button_test_error"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:backgroundTint="@color/material_red_500"
                                android:textColor="@android:color/white"
                                android:text="Set Step 1 Error Text"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>

                    </LinearLayout>

                </moe.feng.common.stepperview.VerticalStepperItemView>

                <moe.feng.common.stepperview.VerticalStepperItemView
                    android:id="@+id/stepper_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:step_index="3"
                    android:visibility="gone"
                    app:step_title="Step 3"
                    app:step_summary="Last step"
                    app:step_summary_done="Last step. Done"
                    app:step_is_last="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="step 2"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/button_next_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/material_blue_500"
                                android:textColor="@android:color/white"
                                android:text="@android:string/ok"/>

                            <Button
                                android:id="@+id/button_prev_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="@android:string/cancel"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>

                    </LinearLayout>

                </moe.feng.common.stepperview.VerticalStepperItemView>

                <Button
                    android:id="@+id/btn_change_point_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:visibility="gone"
                    android:text="Change point activated color"/>

                <Button
                    android:id="@+id/btn_change_done_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:visibility="gone"
                    android:text="Change point done icon"
                    android:layout_marginLeft="24dp" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>